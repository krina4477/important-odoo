                                <field name="task_model_name" invisible="1" />
                                <field nolabel="1" name="task_domain" widget="domain" attrs="{'invisible':[('ref_model_id','=',False)]}" options="{'model': 'task_model_name'}" />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_product_template_custom_fields_tree_view" model="ir.ui.view">
        <field name="name">sh.custom.models.product.template.tree.view</field>
        <field name="model">sh.custom.model.product.template</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name" />
                <field name="field_description" string="Label" />
                <field name="field_type" string="Type" />
                <field name="ref_model_id" />
                <field name="required" />
                <field name="copied" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_action_product_template_custom_fields">
        <field name="name">Product Template Custom Fields</field>
        <field name="res_model">sh.custom.model.product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sh_product_template_custom_fields_tree_view" />
        <field name="type">ir.actions.act_window</field>
    </record>

    <menuitem
        id="sh_product_template_custom_fields_menu"
        name="Product Template Custom Fields"
        parent="sale.menu_sale_config"
        sequence="3"
        action="sh_action_product_template_custom_fields"
        groups="sh_product_custom_fields.group_product_template_custom_field"
    />
</odoo>
