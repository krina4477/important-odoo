<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="radiologist_education_tree_view" model="ir.ui.view">
        <field name="name">radiologist.education.tree</field>
        <field name="model">radiologist.education</field>
        <field name="arch" type="xml">
             <tree string="Radiologist">
                <field name="name"/>
             </tree>
        </field>
    </record>

    <record id="radiologist_education_form_view" model="ir.ui.view">
        <field name="name">radiologist.education.form</field>
        <field name="model">radiologist.education</field>
        <field name="arch" type="xml">
            <form string="Radiologist Education">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

  <record id="action_radiologist_education" model="ir.actions.act_window">
        <field name="name">Radiologist Education</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">radiologist.education</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Test!
            </p>
        </field>
    </record>

    <menuitem name="Radiologist Education Info"
              id="menu_radiologist_education_details"
              parent="radiology.menu_radiologist_details_1"
              action="action_radiologist_education"
              sequence="33"/>
</odoo>

