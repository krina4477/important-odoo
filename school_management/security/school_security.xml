<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="category_school" model="ir.module.category">
            <field name="name">School</field>
        </record>

        <record id="group_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="school_management.category_school"/>
        </record>

        <record id="group_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="school_management.category_school"/>
            <field name="implied_ids" eval="[(4, ref('school_management.group_student'))]"/>
        </record>

        <record id="student_rule" model="ir.rule">
            <field name="name">student rule</field>
            <field name="model_id" ref="school_management.model_student_student"/>
            <field name="groups" eval="[(4, ref('school_management.group_student'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="teacher_rule" model="ir.rule">
            <field name="name">teacher rule</field>
            <field name="model_id" ref="school_management.model_teacher_teacher"/>
            <field name="groups" eval="[(4, ref('school_management.group_teacher'))]"/>
            <field name="domain_force">[('id', '=', user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
