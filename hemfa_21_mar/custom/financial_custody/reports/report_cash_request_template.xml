<odoo>
    <template id="report_cash_request_template">
        <t t-call="web.html_container">
            <t t-if="docs">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- Title Section -->
                            <div style="text-align:center; margin-bottom: 20px;">
                                <h2 style="font-size: 24px; font-weight: bold;">Cash Request Report</h2>
                            </div>

                            <!-- Basic Information Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Request Reference:</strong> <span t-esc="doc.name"/>
                                </div>
                                <div class="col-6" style="text-align:right;">
                                    <strong>Requested By:</strong> <span t-esc="doc.employee_id.name"/>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Custody Type:</strong> <span t-esc="doc.custody_type"/>
                                </div>
                                <div class="col-6" style="text-align:right;">
                                    <strong>Company:</strong> <span t-esc="doc.company_id.name"/>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Requested Amount:</strong> 
                                    <span t-esc="doc.amount_req" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </div>
                                <div class="col-6" style="text-align:right;">
                                    <strong>Total Spent:</strong> 
                                    <span t-esc="doc.total_spent" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </div>
                            </div>

                            <!-- Dates Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Date Requested:</strong> <span t-esc="doc.date_request"/>
                                </div>
                            </div>

                            <!-- Remaining Amount to Pay Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Remaining Amount to Pay:</strong> 
                                    <span t-esc="doc.remaining_amount_to_pay" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </div>
                            </div>

                            <!-- Remaining Amount to Receive Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Remaining Amount to Receive:</strong> 
                                    <span t-esc="doc.remaining_amount_to_receive" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </div>
                            </div>

                            <!-- Expense Lines Section -->
                            <h3 style="margin-bottom: 10px;">Expense Lines</h3>
                            <table class="table table-sm" style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
                                <thead style="border-bottom: 2px solid #000;">
                                    <tr>
                                        <th style="padding: 10px; text-align: center;">Expense Account</th>
                                        <th style="padding: 10px; text-align: center;">Reference</th>
                                        <th style="padding: 10px; text-align: center;">Partner</th>
                                        <th style="padding: 10px; text-align: right;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.expense_line_ids" t-as="line">
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.expense_account_id.name"/>
                                        </td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.reference"/>
                                        </td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.partner_id.name"/>
                                        </td>
                                        <td style="padding: 10px; text-align:right; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Purchase Lines Section -->
                            <t t-if="doc.purchase_line_ids">
                                <h3 style="margin-bottom: 10px;">Purchase Lines</h3>
                                <table class="table table-sm" style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
                                    <thead style="border-bottom: 2px solid #000;">
                                        <tr>
                                            <th style="padding: 10px; text-align: center;">Bill Number</th>
                                            <th style="padding: 10px; text-align: center;">PO Number</th>
                                            <th style="padding: 10px; text-align: right;">Total Amount</th>
                                            <th style="padding: 10px; text-align: right;">Amount Due</th>
                                            <th style="padding: 10px; text-align: right;">Amount to Pay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="doc.purchase_line_ids" t-as="line">
                                            <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                                <span t-esc="line.bill_id.name"/>
                                            </td>
                                            <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                                <span t-esc="line.purchase_id.name"/>
                                            </td>
                                            <td style="padding: 10px; text-align:right; border-bottom: 1px solid #ddd;">
                                                <span t-esc="line.total_amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                            <td style="padding: 10px; text-align:right; border-bottom: 1px solid #ddd;">
                                                <span t-esc="line.amount_due" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                            <td style="padding: 10px; text-align:right; border-bottom: 1px solid #ddd;">
                                                <span t-esc="line.amount_to_pay" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
