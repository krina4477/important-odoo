<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="thankyou_page" model="ir.ui.view">
        <field name="name">Thank you Page</field>
        <field name="type">qweb</field>
        <field name="key">cr_medical_base.thankyou_page</field>
        <field name="arch" type="xml">
            <t name="Thank You" t-name="cr_medical_base.thankyou_page">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty"/>
                    <section
                            class="s_parallax parallax s_parallax_is_fixed bg-black-50 pt160 s_parallax_no_overflow_hidden pb256"
                            data-scroll-background-ratio="1" style="background-image: none;">
                        <span class="s_parallax_bg oe_img_bg oe_custom_bg"
                              style="background-image: ; background-position: 50% 75%;"/>
                        <div class="oe_structure">
                            <section>
                                <div class="container">
                                    <div class="row s_nb_column_fixed">
                                        <div class="col-lg-12 s_title pb16 pt0 rounded" style="text-align: center;">
                                            <h1 class="s_title_small_caps">
                                                <br/>
                                                <br/>
                                                <span style="font-size: 62px;">Thank
                                                    You</span>&amp;nbsp;
                                            </h1>
                                            <br/>
                                            <a type="button" name="home"
                                               t-att-href="'%s' % base_url"
                                               class="btn btn-delta rounded-circle">
                                                Home
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </section>

                </t>
            </t>
        </field>
    </record>
    <record id="website_thankyou_page" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/thank-you</field>
        <field name="view_id" ref="thankyou_page"/>
    </record>


    <record id="thankyou_page_patient" model="ir.ui.view">
        <field name="name">Thank you Page</field>
        <field name="type">qweb</field>
        <field name="key">cr_medical_base.thankyou_page_patient</field>
        <field name="arch" type="xml">
            <t name="Thank You" t-name="cr_medical_base.thankyou_page_patient">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty"/>
                    <div class="oe_structure">
                        <section>
                            <div class="container">
                                <div class="row s_nb_column_fixed">
                                    <div class="col-lg-12 s_title pb16 pt0 rounded" style="text-align: center;">
                                        <h1 class="s_title_small_caps">
                                            <br/>
                                            <br/>
                                            <span style="font-size: 62px;">Thank
                                                You</span>&amp;nbsp;
                                        </h1>
                                        <h3>
                                            Your Confirmation Number is
                                            <span t-esc="confirmation_ref"/>
                                        </h3>
                                        <br/>
                                        <a type="button" name="home"
                                           t-att-href="'%s' % base_url"
                                           class="btn btn-delta rounded-circle">
                                            Home
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="website_thankyou_page_patient" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/thank-you/patient</field>
        <field name="view_id" ref="thankyou_page_patient"/>
    </record>
</odoo>