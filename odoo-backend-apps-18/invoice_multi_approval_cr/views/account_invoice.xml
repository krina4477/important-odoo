<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_post']" position="after">
                <button name="action_approved" type="object" string="Approve"        invisible="state != 'need_approval' or is_approved == True"
                        class="oe_highlight" groups="base.group_erp_manager"/>
                <button name="action_validate" type="object" string="Validate"
                        invisible="state in ['draft','posted','cancel']"
                        class="oe_highlight"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="need_approval,draft,posted"/>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="is_approved" invisible="1"/>
            </xpath>
        </field>
    </record>
    
    <!-- PENDING APPROVAL INVOICE MENU ACTION -->
    <record id="custom_action_move_out_invoice_type" model="ir.actions.act_window">
        <field name="name">Pending Aprroval Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_out_invoice_tree"/>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="domain">[('move_type', '=', 'out_invoice'),('state', 'in', ['need_approval'])]</field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a customer invoice
          </p><p>
            Create invoices, register payments and keep track of the discussions with your customers.
          </p>
        </field>
    </record>

    <!-- PENDING APPROVAL Bill MENU ACTION -->
    <record id="custom_action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="name">Pending Aprroval Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="domain">[('move_type', '=', 'in_invoice'),('state', 'in', ['need_approval'])]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a vendor bill
          </p><p>
            Create invoices, register payments and keep track of the discussions with your vendors.
          </p>
        </field>
    </record>

    <menuitem 
        id="menu_action_move_out_invoice_type_custom" 
        parent="account.menu_finance_receivables" 
        action="custom_action_move_out_invoice_type" 
        sequence="200"/>

    <menuitem 
        id="menu_custom_action_move_in_invoice_type" 
        parent="account.menu_finance_payables" 
        action="custom_action_move_in_invoice_type" 
        sequence="200"/>
</odoo>
