<odoo>
  <data>
  

    <record id="book_genre_form_view" model="ir.ui.view">
        <field name="name">book.genre.form</field>
        <field name="model">book.genre</field>
        <field name="arch" type="xml">
            <form string="Book genre">
                <sheet>
                    <group col="4" colspan="4">
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
  
    <record id="book_genre_tree_view" model="ir.ui.view">
        <field name="name">book.genre.tree</field>
        <field name="model">book.genre</field>
        <field name="arch" type="xml">
            <tree string="Book Genre">
                <field name="name"/>
           </tree>
       </field>
    </record>

  
    <record id="action_book_genre" model="ir.actions.act_window">
        <field name="name">Genre</field>
        <field name="res_model">book.genre</field>
        <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>






