<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_move_operations_inherit_cn_dn" model="ir.ui.view">
        <field name="name">stock.move.operations.view.form.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group" position="after">
                <group attrs="{'invisible': [('state', 'in', ['done'])]}">
                    <field name="picking_code" invisible="1"/>
                    <field name="is_return_order" invisible="1"/>
                    <field name="purchase_dn_ids" invisible="1"/>
                    <field name="truck_id" invisible="1"/>
                    <div class="o_row">
                         <!-- attrs="{'invisible': [('picking_code', 'not in', ['incoming', 'outgoing'])]}" -->
                        <field name="generate_cn"/>
                    </div>
                    <button name="action_generate_cn" type="object" class="btn-primary" title="Generate Cartoon Numbers">
                        <!-- attrs="{'invisible': [('picking_code', 'not in', ['incoming', 'outgoing'])]}" -->
                        <span>Generate CN</span>
                    </button>

<!--                     <label for="to_set_cartoon_id"/>
                    <div class="o_row" attrs="{'invisible': [('picking_code', 'not in', ['incoming'])]}">
                        <field name="to_set_cartoon_id" domain="[('truck_id', '=', truck_id)]" attrs="{'invisible': [('picking_code', 'not in', ['incoming'])]}"/>
                        <button name="action_load_products_in_cn" type="object" class="btn-primary" title="Load Lines In Carton" attrs="{'invisible': [('to_set_cartoon_id', '=', False)]}">
                            <span>Load Lines In Carton</span>
                        </button>
                    </div> -->
                </group>
            </xpath>
        </field>
    </record>

</odoo>
