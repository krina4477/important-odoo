<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <template id="portal_my_home_menu_payment" name="Portal layout : Show Picking" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'picking'" t-attf-class="breadcrumb-item #{'active' if not picking else ''}">
                <a t-if="payment" href="/my/picking_receipt">Delivery</a>
                <t t-else="">Delivery</t>

            </li>
        </xpath>
    </template>
    <template id="portal_delivery_receipt" name="Payment Receipt">
        <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Delivery Receipt</t>
        </t>
        <t t-if="not pickings">
            <p>There are currently no payments Receipt for your account.</p>
        </t>
        <t t-if="pickings" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Delivery Receipt #</th>
                    <th>Date</th>
                    <th>Order No</th>
                    <th>Print</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="pickings" t-as="picking">
                    <tr>
                        <td>
                            <a t-att-href="'/my/picking/pdf/%s?%s' % (picking.id, keep_query())">
                                <t t-esc="picking.name"/>
                            </a>
                        </td>
                        <td><span t-field="picking.scheduled_date"/></td>

                        <td><span t-field="picking.origin"/></td>
                        <td>
                            <a t-att-href="'/my/picking/pdf/%s?%s' % (picking.id, keep_query())" target="_blank">
                                <button type="button" class="btn btn-primary btn-md o_website_form_send">Print Receipt</button>
                            </a>
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>
    <template id="portal_my_home_payment_receipt" name="Show Payment" customize_show="True" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <div class="o_portal_category row g-2 mt-3 delivery_receipt" id="portal_vendor_category">
                <t  t-call="portal.portal_docs_entry">
                    <t t-set="icon" t-value="'/portal_picking_receipt_cr/static/src/img/icon_img.png'"
                       style="height: 50px;"/>
                    <t t-set="title">Delivery Receipt</t>
                    <t t-set="text">Follow, download or pay delivery receipts</t>
                    <t t-set="url" t-value="'/my/delivery_receipt'"/>
                    <t t-set="placeholder_count" t-value="'picking_count'"/>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
