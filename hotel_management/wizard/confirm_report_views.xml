<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="confirm_report_view_form" model="ir.ui.view">
        <field name="name">confirm report</field>
        <field name="model">confirm.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button string="Generate Report" name="confirm_report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn btn-primary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="confirm_report_action" model="ir.actions.act_window">
        <field name="name">confirm report</field>
        <field name="res_model">confirm.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="confirm_report_view_form"/>
    </record>

    <menuitem
            id="confirm_report_root"
            name="Confirm Report"
            parent="hotel_management_main"
            action="confirm_report_action"
            sequence="4"/>
</odoo>
