                            <field name="widget_m2m_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['many2many'] )]}" />
                            <field name="widget_selctn_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['selection'] )]}" />
                            <field name="widget_binary_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['binary'] )]}" />
                            <field name="widget_char_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['char'] )]}" />

