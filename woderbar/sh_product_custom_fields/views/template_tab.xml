<?xml version ="1.0" encoding="utf-8"?>
<odoo>
    <!-- 	 Button Click -->
    <record id="sh_template_order_custom_tab_wizrd_view" model="ir.ui.view">
        <field name="name">sh.dynamic.tab.template.order.form</field>
        <field name="model">sh.custom.tab.template</field>
        <field name="arch" type="xml">
            <form string="Custom Tab">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1" />
                            <field name="label" required="1" />
                        </group>
                        <group>
                            <field name="groups" widget="many2many_tags" /> <field name="invisible_tab" invisible="1" />
                            <field name="tab_list" attrs="{'invisible':[('invisible_tab','=',True)]}" />
                            <field name="sh_position" attrs="{'invisible':[('invisible_tab','=',True)]}" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="create_tab" string="Create Tab" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_action_template_order_custom_tab">
        <field name="name">template Order Custom Tab</field>
        <field name="res_model">sh.custom.tab.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_template_order_custom_tab_wizrd_view" />
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>

    <!--   	Menu Action   -->

    <record id="sh_template_order_form_custom_tab_form_view" model="ir.ui.view">
        <field name="name">sh.custom.tab.template.order.form.view</field>
        <field name="model">sh.custom.tab.template</field>
        <field name="arch" type="xml">
            <form string="Custom Tabs" create="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="label" required="1" />
                        </group>
                        <group>
                            <field name="groups" widget="many2many_tags" /><field name="invisible_tab" invisible="1" /> <field name="tab_list" attrs="{'invisible':[('invisible_tab','=',True)]}" />
                            <field name="sh_position" attrs="{'invisible':[('invisible_tab','=',True)]}" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_template_order_custom_tab_tree_view" model="ir.ui.view">
        <field name="name">sh.custom.tab.template.tree.view</field>
        <field name="model">sh.custom.tab.template</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name" />
                <field name="label" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_action_template_order_custom_tab_form">
        <field name="name">Product Template Order Custom Tab</field>
        <field name="res_model">sh.custom.tab.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sh_template_order_custom_tab_tree_view" />
        <field name="type">ir.actions.act_window</field>
    </record>

    <menuitem
        id="sh_template_custom_tab_action_menu"
        name="Product Template Custom Tabs"
        parent="sale.menu_sale_config"
        groups="sh_product_custom_fields.group_product_template_custom_field"
        sequence="15"
        action="sh_action_template_order_custom_tab_form"
    />
</odoo>
