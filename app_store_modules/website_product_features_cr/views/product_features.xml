<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="variant_features_display" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_detail_main']" position="after">
            <input type="hidden" id="product_id_holder" t-att-value="product.id"/>
            <div id="variant-features-container" class="my-4">
                <!-- <h2 class="text-center mb-4 fw-bold">Features</h2> -->
                <table class="table table-borderless w-50 mx-auto text-center"
                    id="variant-features-table">
                    <tbody id="variant-features-body">
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>
</odoo>