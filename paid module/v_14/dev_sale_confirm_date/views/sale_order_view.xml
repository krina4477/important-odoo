<odoo>
    <record id="view_dev_sale_order_cofirm_button_form" model="ir.ui.view">
         <field name="name">view.dev.sale.order.confirm.button.form</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_order_form"/>
         <field name="arch" type="xml">
            <xpath expr="//header//button[@id='action_confirm']" position="replace">
                <button name='%(action_dev_sale_confirm)d' id="action_confirm" string="Confirm" class="btn-primary" type="action" attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
            </xpath>

            <xpath expr="//header//button[@name='action_confirm']" position="replace">
                <button name='%(action_dev_sale_confirm)d' string="Confirm" type="action" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
            </xpath>
         </field>
    </record>
</odoo>
