    <template id="paypal_checkout_cart_template" inherit_id="website_ecom_custom.short_cart_summary_inherit">
        <!-- <xpath expr="//a[@href='/shop/checkout?express=1']" position="after"> -->
        <xpath expr="//div[hasclass('js_cart_summary')]" position="after">
            <t t-set="is_public_user" t-value="request.env.user.has_group('base.group_public')"/>
            <t t-set="paypal_payment_acquirer" t-value="request.env['payment.acquirer'].sudo().search([('provider','=','paypal_express'),'|', ('website_id', '=', False), ('website_id', '=', request.website.id)], limit=1)"/>
            <t t-if="paypal_payment_acquirer.cart_paypal and paypal_payment_acquirer.state != 'disabled'">
                <t t-if="not is_public_user or is_public_user == paypal_payment_acquirer.enable_for_public">
                    <div t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" id="paypal-button" class="pull-right" style="width: 100%;"></div>
                </t>
            </t>
            <div id="paypal_express_loader" style="display:none;"/>
        </xpath>
    </template>

</odoo>
