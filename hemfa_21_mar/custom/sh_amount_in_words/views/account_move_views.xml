<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_invoice_amount_in_words_arabic_view_inherit" model="ir.ui.view">
        <field name="name">sh.sale.invoice.amount.in.words.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='invoice_tab']" position="inside">
                <group>
                    <field name="amount_in_words"
                        attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}" />
                    <field name="print_to_report"
                        attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}" />
                    <field name="sh_amount_to_word_in_upper_case"
                        attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}" />
                </group>
            </xpath>
        </field>
    </record>
    <record id="sh_purchase_invoice_amount_in_words_arabic_view_inherit" model="ir.ui.view">
        <field name="name">sh.purchase.invoice.amount.in.words.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <!-- invoice_supplier_form -->
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='invoice_tab']" position="inside">
                <group>
                    <field name="amount_in_words"
                        attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                    <field name="print_to_report"
                        attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                    <field name="sh_amount_to_word_in_upper_case"
                        attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>