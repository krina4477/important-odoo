<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    <!-- Define Payment Method for Securionpay -->
        <record id="payment_method_securionpay" model="payment.method">
            <field name="name">Securionpay</field>
            <field name="code">securionpay</field>
            <field name="sequence">1001</field>
            <field name="active">True</field>
            <field name="image" type="base64" file="payment_securionpay_cr/static/src/img/icon.png"/>
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">False</field>
            <field name="support_refund">partial</field>
        </record>

        <record id="account_payment_method_securionpay" model="account.payment.method">
            <field name="name">Securionpay</field>
            <field name="code">securionpay</field>
            <field name="payment_type">inbound</field>
        </record>

    </data>
</odoo>
