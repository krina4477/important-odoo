<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ui_settings_1">
            <div class="theme-setting-wrapper">
                <!--                <div id="settings-trigger">-->
                <!--                    <i class="ti-settings"/>-->
                <!--                </div>-->
                <div id="theme-settings" class="settings-panel">
                    <i class="settings-close ti-close"/>
                    <p class="settings-heading">SIDEBAR SKINS</p>
                    <div class="sidebar-bg-options selected" id="sidebar-light-theme"><div
                            class="img-ss rounded-circle bg-light border mr-3"/>Light
                    </div>
                    <div class="sidebar-bg-options" id="sidebar-dark-theme"><div
                            class="img-ss rounded-circle bg-dark border mr-3"/>Dark
                    </div>
                    <p class="settings-heading mt-2">HEADER SKINS</p>
                    <div class="color-tiles mx-0 px-4">
                        <div class="tiles success"/>
                        <div class="tiles warning"/>
                        <div class="tiles danger"/>
                        <div class="tiles info"/>
                        <div class="tiles dark"/>
                        <div class="tiles default"/>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>