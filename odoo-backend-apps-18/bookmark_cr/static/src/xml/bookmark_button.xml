<?xml version="1.0" encoding="UTF-8"?>
<!-- Template for Add Button On Activity Menu -->
<templates xml:space="preserve">
    <t t-inherit="mail.ActivityMenu" t-inherit-mode="extension">
        <xpath expr="//Dropdown[1]" position="after">
            <Dropdown position="'bottom-end'" menuClass="discussSystray.menuClass">
                <t>
                    <i class="fa fa-lg fa-bookmark" role="img" aria-label="My Bookmarks" t-on-click="_onBookmarkClick" />
                </t>
            </Dropdown>
        </xpath>
    </t>
</templates>

