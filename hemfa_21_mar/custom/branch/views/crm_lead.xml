<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_lead_form_inherit_branch" model="ir.ui.view">
        <field name="name">view.lead.form.inherit.branch</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='lead_info']//field[@name='email_cc']" position="after">
                <field name="branch_ids" widget="many2many_tags"/>
            </xpath>
              <xpath expr="//group[@name='opportunity_partner']//field[@name='lost_reason_id']" position="before">
                <field name="branch_ids" widget="many2many_tags"/>
            </xpath>

        </field>
    </record>

</odoo>