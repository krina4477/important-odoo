<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="order_template">
        <t t-call="website.layout">
            <div style="width: 85%; justify-content: center; margin: 1% auto;">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar"/>
            </div>
            <div class="container" style="margin: 1% auto;">
                <div class="text-center">
                    <h2>Course Details</h2>
                </div>
                <div class="table-responsive">
                    <table class="table table-condensed table-striped o_portal_my_quotes_table"
                           style="width: 100%; border: 2px solid black;">
                        <thead style="border-bottom: 2px solid black; background-color: #ccccff;">
                            <tr>
                                <th>Course</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="hotel_history" t-as="course">
                                <style>
                                    tr:hover {
                                    background-color: #ccccff;
                                    }
                                </style>
                                <tr>
                                    <td>
                                        <a t-attf-href="/shop/product/#{course.product_tmpl_id.id}">
                                            <t t-esc="course.product_tmpl_id.display_name"/>
                                        </a>
                                    </td>
                                    <td>
                                        <t t-esc="course.list_price"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="school_home_page" inherit_id="portal.portal_my_home" name="Home Page">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
            <t t-set="home_url" t-value="url_for('/course')"/>
            <a t-att-href="home_url"
               class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                <t>CourseDetails</t>
            </a>
        </xpath>
    </template>

    <template id="course_template" inherit_id="portal.portal_breadcrumbs" name="Course Template">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="request.httprequest.path == '/course'">
                / Course Details
            </li>
        </xpath>
    </template>

