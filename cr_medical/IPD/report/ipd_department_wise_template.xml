<odoo>
    <template id="report_ipd_department_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h1>
                            <u>
                                <em>Ipd Report Department Wise</em>
                            </u>
                        </h1>
                    </div>
                    <div>
                        <table class="table .table-striped .table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Date From :
                                        <t t-esc="start_date"/>
                                    </td>
                                    <td>Date To :
                                        <t t-esc="end_date"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div>
                        <t t-foreach="record" t-as="line">
                            <div class="row font-weight-bold"
                                 style="font-size:20px; margin-left:5px;">
                                <th colspan="12">
                                    <span t-esc="line"/>
                                </th>
                            </div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                        <th name="sequence" class="text-center">Sr.No</th>
                                        <th name="sequence" class="text-left">IPD No</th>
                                        <th name="Patient" class="text-left">Patient Name</th>
                                        <th name="Patient" class="text-left">age</th>
                                        <th name="Patient" class="text-left">sex</th>
                                        <th name="department" class="text-left">Department</th>
                                        <th name="doctor" class="text-left">Doctor</th>
                                        <th name="date" class="text-center">Admit Date</th>
                                        <th name="date" class="text-left">Bed</th>
                                        <th name="date" class="text-right">Mobile No</th>
                                        <!-- <th name="weekdays" class="text-right">Day</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <div class="ipd_report">
                                        <t t-set="index" t-value="0"/>


                                        <t t-foreach="record[line]" t-as="res">
                                            <t t-set="rec" t-value="request.env['ipd.registration'].browse([res])"/>
                                            <tr>
                                                <t t-set="index" t-value="index+1"/>
                                                <td class="text-center" name="count" style="font-size:14px;">
                                                    <span t-esc="index"/>
                                                </td>
                                                <td name="Sequence" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.name"/>
                                                </td>
                                                <td name="patient" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.patient_id.name"/>
                                                </td>
                                                <td name="age" class="text-right" style="font-size:14px;">
                                                    <span t-esc="rec.patient_id.age"/>
                                                </td>

                                                <td name="sex" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.patient_id.sex"/>
                                                </td>
                                                <td name="department" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.doctor_department_id.department"/>
                                                </td>
                                                <td name="doctor" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.doctor_id.name"/>
                                                </td>
                                                <td name="date" class="text-center" style="font-size:14px;">
                                                    <span t-esc="rec.date_of_admit"
                                                          t-options='{"widget": "date","format": "MM/dd/yyyy"}'/>
                                                </td>
                                                <td name="bed" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.bed_id.name"/>
                                                </td>
                                                <td name="bed" class="text-right" style="font-size:14px;">
                                                    <span t-esc="rec.patient_id.mobile"/>
                                                </td>

                                                <!-- <td name="weekdays" class="text-right" style="font-size:14px;">
                                                    <span t-esc="rec.weekdays"/>
                                                </td> -->
                                            </tr>
                                        </t>
                                        <!--                        </t>-->

                                    </div>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>