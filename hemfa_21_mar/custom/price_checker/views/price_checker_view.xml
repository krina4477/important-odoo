<odoo>
    <record id="view_price_checker_form" model="ir.ui.view">
        <field name="name">price.checker.form</field>
        <field name="model">price.checker</field>
        <field name="arch" type="xml">
            <form string="Price Checker" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="barcode"/>
                    </group>
                    
                    <group>
                        <field name="pricelist_id" widget="selection"/>
                    </group>

                    <group>
                        <field name="selected_warehouse_id" widget="selection"/>
                    </group>
                    
                    <group>
                        <field name="last_scanned_barcode" readonly="1"/>
                        <field name="product_template_id" readonly="1"/>
                        <field name="variant_ids" readonly="1">
                            <tree editable="false" options="{'no_open': True}">
                                <field name="default_code"/>
                                <field name="barcode"/>
                                <field name="name"/>
                                <field name="product_template_attribute_value_ids" widget="many2many_tags"/>
                                <field name="pricelist_price" string="Price" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    
                    <group string="Stock Information">
                        <field name="stock_line_ids" readonly="True" mode="tree,form" create="0" edit="0">
                            <tree editable="false" options="{'no_open': True}">
                                <field name="product_variant_id"/>
                                <field name="product_template_attribute_value_ids" widget="many2many_tags"/>
                                <field name="warehouse_id"/>
                                <field name="quantity"/>
                            </tree>
                            <form string="Price Checker Stock Line" create="0" edit="0">
                                <sheet>
                                    <group>
                                        <field name="product_variant_id"/>
                                        <field name="warehouse_id"/>
                                        <field name="quantity"/>
                                        <field name="product_template_attribute_value_ids" widget="many2many_tags" readonly="True"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_price_checker" model="ir.actions.act_window">
        <field name="name">Price Checker</field>
        <field name="res_model">price.checker</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="menu_price_checker_root" name="Price Checker" parent="stock.menu_stock_root"/>
    <menuitem id="menu_price_checker" name="Check Prices" parent="menu_price_checker_root" action="action_price_checker"/>

</odoo>
