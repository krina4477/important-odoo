<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.partner.auto.reconcile</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<block id="account_reports_settings" position="after">
        		<div class = "row mt16 o_settings_container">
        		
					<div class="col-12 col-lg-6 o_setting_box">
					    <div class="o_setting_left_pane">
					        <field name="aged_receivable_auto_reconcile"/>
					    </div>
					    <div class="o_setting_right_pane">
					        <label for="aged_receivable_auto_reconcile"/>
					        <div class="text-muted">
					            When ticked, it will show a button "Auto Reconcile" on Aged Receivable Menu in Accounting/Reporting Section.
					        </div>
					    </div>
					</div>
					
					<div class="col-12 col-lg-6 o_setting_box">
					    <div class="o_setting_left_pane">
					        <field name="aged_payable_auto_reconcile"/>
					    </div>
					    <div class="o_setting_right_pane">
					        <label for="aged_payable_auto_reconcile"/>
					        <div class="text-muted">
					            When ticked, it will show a button "Auto Reconcile" on Aged Payable Menu in Accounting/Reporting Section.
					        </div>
					    </div>
					</div>
					
					<div class="col-12 col-lg-6 o_setting_box">
					    <div class="o_setting_left_pane">
					        <field name="partner_ledger_auto_reconcile"/>
					    </div>
					    <div class="o_setting_right_pane">
					        <label for="partner_ledger_auto_reconcile"/>
					        <div class="text-muted">
					            When ticked, it will show a button "Auto Reconcile" on Partner Ledger Menu in Accounting/Reporting Section.
					        </div>
					    </div>
					</div>
				</div>  
			</block>      		
        </field>
   	</record>
</odoo>