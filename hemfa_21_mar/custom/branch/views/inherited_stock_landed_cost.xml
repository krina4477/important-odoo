<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_landed_cost_form_inherit_branch" model="ir.ui.view">
            <field name="name">view.landed.cost.inherit.branch</field>
            <field name="model">stock.landed.cost</field>
            <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vendor_bill_id']" position="before">
                    <field name="branch_id"/>
                </xpath>
                <xpath expr="//field[@name='vendor_bill_id']" position="attributes">
                    <attribute name="domain">[('move_type', '=', 'in_invoice'),('state','=','posted'),'|', ('branch_id',
                        '=',
                        False),('branch_id', '=', branch_id)]
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='picking_ids']" position="attributes">
                    <attribute name="domain">['|', ('branch_id', '=', False),('branch_id', '=', branch_id),
                        ('picking_type_id.code', '=', 'incoming')]
                    </attribute>
                </xpath>
            </field>
        </record>

        <record id="view_stock_landed_cost_tree_inherit_branch" model="ir.ui.view">
            <field name="name">view.landed.cost.tree.inherit.branch</field>
            <field name="model">stock.landed.cost</field>
            <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="branch_id"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>