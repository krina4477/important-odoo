<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="weather_city_form" model="ir.ui.view">
            <field name="name">weather.city.form</field>
            <field name="model">weather.city</field>
            <field name="arch" type="xml">
                <form string="Weather Cities">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="zip" />
                                <field name="state_id" required="1"/>
                                <field name="country_id" required="1"/>
                                <field name="weather_name" invisible="1"/>
                                <field name="weather_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="partner_latitude" required="1"/>
                                <field name="partner_longitude" required="1"/>
                                <field name="date_localization" readonly="1"/>
                                <button string="(Get Geolocalize)" name="city_geo_localize" class="btn btn-link" type="object"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="weather_city_tree" model="ir.ui.view">
            <field name="name">weather.city.tree</field>
            <field name="model">weather.city</field>
            <field name="arch" type="xml">
                <list string="Weather Cities" editable="top" duplicate="false">
                    <field name="name" required="1"/>
                    <field name="zip" />
                    <field name="state_id" required="1"/>
                    <field name="country_id" required="1"/>
                    <field name="partner_latitude" required="1"/>
                    <field name="partner_longitude" required="1"/>
                    <field name="date_localization" readonly="1"/>
                    <button string="(Get Geolocalize)" name="city_geo_localize" class="btn btn-link" type="object"/>
                    <field name="weather_name" invisible="1"/>
                    <field name="weather_id" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="weather_city_search" model="ir.ui.view">
            <field name="name">weather.city.search</field>
            <field name="model">weather.city</field>
            <field name="arch" type="xml">
                <search string="Weather Cities">
                    <field name="name" string="Name"/>
                    <field name="state_id" string="State"/>
                    <field name="country_id" string="Country"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="state_id" context="{'group_by':'state_id'}"/>
                        <filter string="Country" name="country_id" context="{'group_by':'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_weather_city" model="ir.actions.act_window">
            <field name="name">Weather Cities</field>
            <field name="res_model">weather.city</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="weather_city_tree"/>
            <field name="target">current</field>
        </record>

        <menuitem name="Weather Cities"
                  id="menu_weather_citys"
                  sequence="999"
                  parent="website.menu_website_global_configuration"
                  action="action_weather_city"/>
    </data>
</odoo>