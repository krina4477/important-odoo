<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_emp_payslip" model="mail.template">
        <field name="name">Employee Payslip</field>
        <field name="subject">Employee Payslip</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <p>
                Dear,
                <t t-esc="object.name or ''"/>
                Please find your Salary slip of 
                <t t-if="datetime.date.today().month == 1">
                    <t t-out="datetime.date.today().replace(month=12).strftime('%B') or ''"></t>
                </t>
                <t t-else="">
                    <t t-out="datetime.date.today().replace(month=datetime.date.today().month-1).strftime('%B') or ''"></t>
                </t>
                , contact responsible person if you have any question.
            </p>
        </field>
    </record>
</odoo>
