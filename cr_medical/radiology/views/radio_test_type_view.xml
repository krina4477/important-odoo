<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cr_radiology_test_type_tree_view" model="ir.ui.view">
          <field name="name">cr.radiology.test.type.tree.view</field>
          <field name="model">radio.test.type</field>
          <field name="arch" type="xml">
            <tree string="radiology test type">
                <field name="test_name"/>
            </tree>
        </field>
    </record>


    <record id="cr_radiology_test_type_form_view" model="ir.ui.view">
        <field name="name">cr.radiology.test.type.form.view</field>
        <field name="model">radio.test.type</field>
        <field name="arch" type="xml">
            <form string="radiology detail">
                <sheet>
                    <group>
                        <group>
                            <field name="test_name"/>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>


     <record id="action_cr_radiology_test_type_information" model="ir.actions.act_window">
        <field name="name">Radiology Test Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">radio.test.type</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Test!
            </p>
        </field>
    </record>


    <menuitem id="menu_radiology_test_type_info"
              action="action_cr_radiology_test_type_information"
              parent="radiology.menu_radiologist_details_1"
              active="True"
              sequence="35"
              />



</odoo>
