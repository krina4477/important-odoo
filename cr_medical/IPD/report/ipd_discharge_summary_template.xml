<odoo>
    <template id="ipd_discharge_report_department">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h1>
                            <u>
                                <em>Ipd Discharge Summary Report</em>
                            </u>
                        </h1>
                    </div>
                    <div>
                        <table class="table .table-striped .table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Date From :
                                        <t t-esc="start_date"/>
                                    </td>
                                    <td>Date To :
                                        <t t-esc="end_date"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div>
                        <!--                        <t t-if="selection_types in ['OPD','IPD']">-->
                        <t t-foreach="record" t-as="line">
                            <div class="row font-weight-bold"
                                 style="font-size:20px; margin-left:5px;">
                                <th colspan="12">
                                    <span t-esc="line"/>
                                </th>
                            </div>
                            <table class="table table-bordered">

                                <thead>
                                    <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                        <th name="sr_no" class="text-center">Sr.No</th>
                                        <th name="sequence" class="text-left">Ipd No</th>
                                        <th name="Patient" class="text-left">Patient Name</th>
                                        <th name="Patient" class="text-left">Age</th>
                                        <th name="Patient" class="text-left">Sex</th>
                                        <th name="department" class="text-center">Admission Date</th>
                                        <th name="doctor" class="text-left">Room</th>
                                        <th name="date" class="text-right">Room Number</th>
                                        <!--                                        <th name="weekdays" class="text-right">Department</th>-->
                                        <th name="weekdays" class="text-left">Bed</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <div class="opd_report">
                                        <t t-set="index" t-value="0"/>
                                        <t t-foreach="record[line]" t-as="res">
                                            <t t-set="rec" t-value="request.env['ipd.registration'].browse([res])"/>
                                            <tr>
                                                <t t-set="index" t-value="index+1"/>
                                                <td class="text-center" name="count" style="font-size:14px;">
                                                    <span t-esc="index"/>
                                                </td>
                                                <td name="name" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.name"/>
                                                </td>
                                                <td name="patient" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.patient_id.name"/>
                                                </td>
                                                <td name="age" class="text-left" style="font-size:14px;">
                                                    <t t-set="splited" t-value="rec.patient_id.age.split(',')"/>
                                                    <span t-esc="splited[0]"/>
                                                </td>
                                                <td name="sex" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.patient_id.sex"/>
                                                </td>
                                                <td name="date" class="text-center" style="font-size:14px;">
                                                    <span t-esc="rec.date_of_admit"
                                                          t-options='{"widget": "date","format": "MM/dd/yyyy"}'
                                                    />
                                                </td>
                                                <td name="type" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.select_room_type.name"/>
                                                </td>
                                                <td name="room" class="text-right" style="font-size:14px;">
                                                    <span t-esc="rec.select_room_number.room_no"/>
                                                </td>
                                                <!--                                                <td name="department" class="text-right" style="font-size:14px;">-->
                                                <!--                                                    <span t-esc="rec.doctor_department_id.department"/>-->
                                                <!--                                                </td>-->
                                                <td name="bed" class="text-left" style="font-size:14px;">
                                                    <span t-esc="rec.bed_id.name"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <!--                        </t>-->
                                    </div>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>