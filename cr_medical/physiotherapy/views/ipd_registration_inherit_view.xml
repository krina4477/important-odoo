<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ipd_registration_form_view_inherit_1" model="ir.ui.view">
        <field name="name">ipd_registration_form_view_inherit</field>
        <field name="model">ipd.registration</field>
        <field name="inherit_id" ref="IPD.cr_ipd_registration_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="show_patient_physiotherapy"
                        attrs="{'invisible':[('physiotherapy_count','=', 0)]}"
                        type="object" class="oe_stat_button" icon="fa-heartbeat">
                    <field name="physiotherapy_count" widget="statinfo" string="Physiotherapy"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
