<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ipd_form_view_form_inherit" model="ir.ui.view">
        <field name="name">ipd.registration.form.inherit</field>
        <field name="model">ipd.registration</field>
        <field name="inherit_id" ref="IPD.cr_ipd_registration_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="custom_function"
                        attrs="{'invisible':[('diet_count','=', 0)]}"
                        type="object" icon="fa-pagelines">
                    <field name="diet_count" readonly="1" widget="statinfo" string="Diet Plan"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
