<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_pricelist_all_manager" model="ir.rule">
            <field name="name">All Product Pricelist</field>
            <field ref="model_product_pricelist" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('branch.group_branch_user_manager'))]"/>
            <field name="active" eval="True"/>
        </record>

        <record id="product_pricelist_branch_user_rule" model="ir.rule">
            <field name="name">Pricelist Branch User</field>
            <field name="model_id" ref="model_product_pricelist"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('pricelist_branch_id','=',False),('pricelist_branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('branch.group_branch_user')),(4, ref('branch.group_multi_branch_user'))]"/>
        </record>

    </data>
</odoo>