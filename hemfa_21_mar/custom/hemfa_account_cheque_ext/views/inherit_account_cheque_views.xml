<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hemfa_account_cheque_inherit_form_view" model="ir.ui.view">
            <field name="name">hemfa.account.cheque.inherit.form.view</field>
            <field name="model">account.cheque</field>
            <field name="inherit_id" ref="hemfa_account_cheque.account_incoming_cheque_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="cheque_amount_in_words"/>
                </xpath>
            </field>
        </record>
        <record id="account_outgoing_cheque_form_view_extended" model="ir.ui.view">
            <field name="name">account.outgoing.cheque.form_view.extended</field>
            <field name="model">account.cheque</field>
            <field name="inherit_id" ref="hemfa_account_cheque.account_outgoing_cheque_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="cheque_amount_in_words"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

