<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_send_report" model="ir.ui.view">
            <field name="name">sale.order.in.form.work</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="before">
                    <field invisible="1" name="appear_in_sale_requisition"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="before">
                    <button invisible="appear_in_sale_requisition != True" name="action_quotation_send_order_sale" string=" Send Sale Order (Sabic)" type="object"/>
                    <button invisible="appear_in_sale_requisition != True or state == 'done'" name="recalculate_handling_fees" string="Recalculate Handling fees" type="object"/>
                </xpath>
                <xpath expr="//tree/field[@name='product_uom_qty']" position="before">
                    <field invisible="1" name="sale_requisition_line_id"/>
                </xpath>
                <xpath expr="//tree/field[@name='product_uom_qty']" position="attributes">
                    <attribute name="readonly">sale_requisition_line_id != False</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
