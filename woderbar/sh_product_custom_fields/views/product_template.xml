<?xml version ="1.0" encoding="utf-8"?>

<odoo>
    <!-- 	 Button Click -->

    <record id="sh_product_template_dynamic_models_form_view" model="ir.ui.view">
        <field name="name">sh.dynamic.model.product.template.form</field>
        <field name="model">sh.custom.model.product.template</field>
        <field name="arch" type="xml">
            <form string="Custom Fields">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="field_description" string="Label" />
                            <field name="state" readonly="1" invisible="1" />
                            <field name="model_id" options='{"no_open": True, "no_create": True}' invisible="1" />
                            <field name="field_type" string="Type" />
                            <field
                                name="ref_model_id"
                                options='{"no_open": True, "no_create": True}'
                                attrs="{'required': [('field_type','in',['many2one','many2many'])],
                                    'readonly': [('field_type','not in',['many2one','many2many'])],
                                    'invisible': [('field_type','not in',['many2one','many2many'])]}"
                            />

                            <field name="widget_m2o_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['many2one'] )]}" />
                            <field name="widget_m2m_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['many2many'] )]}" />
                            <field name="widget_selctn_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['selection'] )]}" />
                            <field name="widget_binary_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['binary'] )]}" />
                            <field name="widget_char_selection" options='{"no_open": True, "no_create": True}' string="Widget" attrs="{'invisible': [('field_type','not in',['char'] )]}" />

                            <field name="widget_float_selection" options='{"no_open": True, "no_create": True}' attrs="{'invisible': [('field_type','not in',['float'] )]}" />
                            <field name="widget_text_selection" options='{"no_open": True, "no_create": True}' attrs="{'invisible': [('field_type','not in',['text'] )]}" />

                            <field name="position_selection" invisible="1" />
                            <field name="tab_list" />
                            <field name="sh_position_field" options='{"no_open": True, "no_create": True}' />
                            <field name="sh_position" />
                            <field name="inherit_view_obj" invisible="1" />
                        </group>
                        <group>
                            <field name="field_help" string="Help" />
                            <field name="required" />
                            <field name="copied" />
                            <field name="tracking_visibility" />
                        </group>
                    </group>
                    <group>
                        <field name="sh_selection_ids" attrs="{'invisible': [('field_type','not in',['selection','reference'])]}" widget="one2many">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle" />
                                <field name="value" />
                                <field name="name" />
                            </tree>
                        </field>
                    </group>
                    <notebook>
                        <page name="groups" string="Access Rights">
                            <field name="groups" />
                        </page>
                        <page string="Domains">
                            <div class="col-md-12">
                                <field name="task_model_name" invisible="1" />
                                <field nolabel="1" name="task_domain" widget="domain" attrs="{'invisible':[('ref_model_id','=',False)]}" options="{'model': 'task_model_name'}" />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                            </div>
                        </page>
                    </notebook>
                </sheet>

                <footer>
                    <button name="create_fields" string="Create Fields" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="sh_product_template_dynamic_fields">
        <field name="name">Create Product Custom Fields</field>
        <field name="res_model">sh.custom.model.product.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_product_template_dynamic_models_form_view" />
        <field name="target">new</field>
    </record>

    <record id="sh_product_template_dynamic_fields_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.dynamic.fields.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="prod_var" invisible="1" />
                <button
                    name="%(sh_product_template_dynamic_fields)d"
                    string="Add Custom Field"
                    type="action"
                    class="oe_highlight"
                    attrs="{'invisible':[('prod_var','=',True)]}"
                    groups="sh_product_custom_fields.group_product_template_custom_field"
                />

                <button
                    name="%(sh_action_template_order_custom_tab)d"
                    attrs="{'invisible': [('prod_var', '=',True)]}"
                    groups="sh_product_custom_fields.group_product_template_custom_field"
                    string="Add Custom Tab"
                    type="action"
                    class="oe_highlight"
                />
            </xpath>
        </field>
    </record>

