<templates id="template" xml:space="preserve">
    <t t-name="CouponButtonWidget" owl="1">
        <div class='control-button'>
            <i class='fa fa-star' />
            Manage Coupon
        </div>
    </t>

    <t t-name="CouponPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_coupon_popup">
                <p class="title">Choose Your Option</p>
                <div>
                    <div class="wk_coupon_block">
                        <div id="gift-coupons-create" t-on-click="click_gift_coupons_create" class="wk_coupon_button wk_button_float1">
                            <img src="/pos_coupons/static/src/img/icon-create-coupon.png" width="150" height="100" />
                            <div class="wk_coupon_top_text">
                        Click here to
                        </div>
                            <div class="wk_coupon_bottom_text">
                            Create New Coupon
                        </div>
                        </div>
                        <div id="gift-coupons-redeem" t-on-click="click_gift_coupons_redeem" class="wk_coupon_button wk_button_float2">
                            <img src="/pos_coupons/static/src/img/icon-redeem-coupon.png" width="150" height="100" />

                            <div class="wk_coupon_top_text">
                        Click here to Redeem
                    </div>
                            <div class="wk_coupon_bottom_text">
                        existing Gift Coupon
                    </div>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <div class="button coupon_button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="CreateCouponPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_create_coupon_popup">
                <p class="title">Create New Coupon</p>
                <div class='wk-new-coupon-details'>

                    <table class="wk_coupon_form_table">
                        <tr>
                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">
                                        Coupon Name
                                        <label style="color:red">*</label>
                                    </label>
                                    <input class='abcd wk_coupon_value right' name='wk_coupon_name'></input>
                                </div>
                            </td>
                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">
                                        Validity(in days)
                                        <label style="color:red">*</label>
                                    </label>
                                    <div class="wk_valid_error"></div>
                                    <input class='wk_coupon_value' name='wk_coupon_validity'></input>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">Coupon used In</label>
                                    <select class='wk_coupon_value' name='wk_coupon_usage'>
                                        <option value='pos'>Point of Sale</option>
                                        <option value='both'>POS And Ecommerce </option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">Customer Type</label>
                                    <select class='wk_coupon_value' t-on-change="change_customer_type" name='wk_customer_type'>
                                        <option value='general'>All Customers</option>
                                        <option value='special_customer'>Special Customer</option>
                                    </select>
                                    <div class="valid_error_customer"></div>
                                </div>
                            </td>
                        </tr>
                        <tr>

                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">
                                        Coupon Value
                                        <label style="color:red">*</label>
                                    </label>
                                    <input class='wk_coupon_value' name='wk_coupon_value' style="width:143px !important;float:left"></input>
                                    <select style="width:85px !important;float:right" class='wk_coupon_value' name='wk_amount_type'>
                                        <option value='amount'>Fixed</option>
                                        <option value='percent'>percent</option>
                                    </select>
                                    <div class="wk_valid_error"></div>
                                </div>
                            </td>
                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">
                                        Total Available
                                        <label style="color:red">*</label>
                                    </label>
                                    <div class="wk_valid_error"></div>
                                    <input class='wk_coupon_value' name='wk_coupon_availability'></input>
                                </div>
                            </td>
                        </tr>

                        <tr style="display:none">
                            <td>
                                <div class="wk_coupon_form_block">
                                    <input type="checkbox" id="wk_partial_redeemed" class="slected_customer" value="value" />
                                    <label name="wk_partial_redeemed">Partial Redemption</label>
                                </div>
                            </td>
                            <td>
                                <div class="wk_coupon_form_block">
                                    <label class="wk_coupon_label">Redemption Limit</label>
                                    <div class="wk_valid_error"></div>
                                    <input class='wk_coupon_value' name='wk_redeemption_limit'></input>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <table class="wk_form_table">
                        <tr>
                            <td>
                                <textarea style="height:20px;" class="coupon_extrainfo" rows="4" name="note" placeholder="For internal user only. This will never be displayed to the customer."></textarea>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="wk_create_coupon_button cancel" t-on-click="click_wk_create_coupon">
                        Create
                    </div>


                </div>
            </div>
        </div>
    </t>

    <t t-name="CreateconfirmPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_confirm_coupon_popup">
                <p class="title"> Confirmation</p>
                <div class="wk_coupon_key_label">
                    A new Gift Coupon has been created successfully.
                </div>
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="wk_confirm_coupon_button cancel" id="print-coupons" t-on-click="click_print_coupons">
                        Print
                        <i class="fa fa-print" />
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="RedeemPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_redeem_coupon_popup">
                <p class="title">Redeem Gift Coupon</p>
                <div class="wk_coupon_key_label">
                    Enter Voucher Code
                </div>
                <input type="text" name="redeem_value" id="coupon_8d_code" required="true" autofocus="autofocus" style="margin-bottom: 10px;" />
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="wk_confirm_coupon_button cancel" id="wk-redeem-coupons" t-on-click="click_wk_redeem_coupons">
                      Validate
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="RedeemPopupRetryWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_redeem_coupon_popup">
                <p class="title">Redeem Gift Coupon</p>
                <div class="wk_coupon_key_label">
                <i class='fa fa-exclamation-triangle' style="color:red"></i> <t t-esc="props.errortitle"/>
                </div>
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="wk_confirm_coupon_button cancel" t-on-click="click_wk_retry_coupons" id="wk-retry-coupons">
                       Retry
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="RedeemPopupValidateWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_redeem_coupon_popup">
                <p class="title">Redeem Gift Coupon</p>
                <div class="wk_coupon_key_label">
                    <t t-esc=" props.title || '0' " />
                    <br />
                    NOTE: For your current order you can make discount of
                    <t t-esc=" props.msg || '0' " />
                    amount.
                </div>
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="wk_confirm_coupon_button cancel" t-on-click="click_wk_retry_coupons" id="wk-retry-coupons">
                       Redeem
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ErrorForSelection" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-textinput">
                <p class="title">
                    <t t-esc="props.title" />
                </p>
                <p class="body" style="color:red">
                  * Please select Customer/ Please Select Table/ Please select Slots
                </p>
                <div class="footer">
                    <div class="button cancel" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="CouponXmlReceipt">
        <div class="pos-receipt">
            <t t-if='receipt.company.logo'>
                <img t-att-src='receipt.company.logo' />
            </t>
            <t t-if='receipt.company.logo'>
                <h2>
                    <t t-esc='receipt.company.name' />
                </h2>
                <br />
            </t>
            <br />
            <div>
                <div>COUPON:</div>
            </div>
            <div font='b'>
                <div>
                    <t t-esc='receipt.coupon.name' />
                </div>
            </div>
            <br />
            <div>
                <div>Validaty:</div>
            </div>
            <line>
                <left>
                    From:
                    <t t-esc='receipt.coupon.issue_date' />
                </left>
                <right>
                    To:
                    <t t-esc='receipt.coupon.expiry_date' />
                </right>
            </line>
            <br />
            <div>
                <div>
                    Coupon Value:
                    <t t-esc='receipt.coupon.coupon_value' />
                </div>
                <div>
                    Secret Code :
                    <t t-esc='receipt.coupon.coupon_code' />
                </div>
            </div>
            <br />
            <br />
            <t t-if='receipt.footer'>
                <br />
                <pre>
                    <t t-esc='receipt.footer' />
                </pre>
                <br />
                <br />
            </t>
            <br />
            <div font='b'>
                <div>
                    <t t-esc='receipt.date.localestring' />
                </div>
            </div>
        </div>
    </t>
</templates>
