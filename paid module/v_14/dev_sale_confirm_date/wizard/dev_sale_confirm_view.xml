<odoo>
    <record id="view_dev_sale_confirm_date_form" model="ir.ui.view">
        <field name="name">view.dev.sale.confirm.form</field>
        <field name="model">dev.sale.confirm</field>
        <field name="arch" type="xml">
            <form string="Sale Confirm Date">
                <group>
                    <group>
                        <field name="confirm_date"/>
                    </group>
                    <group>

                    </group>
                </group>
                <footer>
                    <button name="confirm_sale_order" string="Confirm" type="object" class="btn-primary"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dev_sale_confirm" model="ir.actions.act_window">
        <field name="name">Confirm Sale</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dev.sale.confirm</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>