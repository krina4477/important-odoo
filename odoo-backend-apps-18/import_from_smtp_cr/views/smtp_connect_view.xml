<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="smtp_connection_tree_view">
        <field name="name">smtp.connect.tree</field>
        <field name="model">smtp.connect</field>
        <field name="arch" type="xml">
            <list string="SMTP Connections">
                <field name="host_name"/>
                <field name="username"/>
                <field name="password"/>
                <field name="with_password"/>
                <field name="public_key_path"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="smtp_connection_form_view">
        <field name="name">smtp.connect.form</field>
        <field name="model">smtp.connect</field>
        <field name="arch" type="xml">
            <form string="SMTP Connections">
                <sheet>
                    <group>
                            <field name="host_name"/>
                            <field name="username"/>
                            <field name="with_password"/>
                            <field name="password" password="True" required="with_password == True"/>
                            <field name="public_key_path" invisible="with_password == True" />
                    </group>
                    <group>
                        <button name="test_connection" string="Test Connection" type="object" class="btn btn-primary" />
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="smtp_connections_action">
        <field name="name">SMTP Connections</field>
        <field name="res_model">smtp.connect</field>
        <field name="view_id" ref="smtp_connection_tree_view"/>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No SMTP Connections found
            </p>
        </field>
    </record>

    <record model="ir.ui.view" id="smtp_import_configuration_tree">
        <field name="name">smtp.import.config.tree</field>
        <field name="model">smtp.import.config</field>
        <field name="arch" type="xml">
            <list string="SMTP Import Configurations">
                <field name="smtp_host"/>
<!--                <field name="remote_source_dirpath"/>-->
<!--                <field name="remote_archive_dirpath"/>-->
                <field name="model"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="smtp_import_config_form_view">
        <field name="name">smtp.import.config.form</field>
        <field name="model">smtp.import.config</field>
        <field name="arch" type="xml">
            <form string="STP Import Configurations">
                <sheet>
                    <group class="col-9">
                            <field name="smtp_host"/>
                    </group>
                    <group string="Source Destination Configuration">
                        <field name="source_destination_paths" widget="section_and_note_one2many" mode="tree">
                            <tree string="Source Destination Configuration" editable="bottom">
<!--                                <field name="remote_source_dirpath"/>-->
<!--                                <field name="remote_archive_dirpath"/>-->
                            </tree>
                        </field>
                    </group>
                    <group><field name="model"/></group>
                    <group string="Import Fields Mapping">
                        <field name="fields" widget="section_and_note_one2many" mode="tree">
                            <list string="Fields Mapping" editable="bottom">
                                <field name="import_config_id" invisible="1"/>
                                <field name="field" domain="[('model_id','=', parent.model)]"/>
                                <field name="mapping_field" />
                            </list>
                        </field>
                    </group>
                    <button class="oe_stat_button btn-primary" type="object" name="generate_sample_csv" string="Generate Sample CSV"/>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="smtp_import_configuration_action">
        <field name="name">SMTP Import Configurations</field>
        <field name="res_model">smtp.import.config</field>
        <field name="view_id" ref="smtp_import_configuration_tree"/>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No SMTP Connections found
            </p>
        </field>
    </record>

    <menuitem id="menu_smtp_connections_action" action="smtp_connections_action"
              parent="base.menu_custom" name="SMTP Connections" sequence="1"/>
    <menuitem id="menu_smtp_import_config_action" action="smtp_import_configuration_action"
              parent="base.menu_custom" name="SMTP Import Configurations" sequence="2"/>


</odoo>