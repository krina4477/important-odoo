<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_auto_create_emp" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.auto.create.emp.setup</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="0"/>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
		<field name="arch" type="xml">
				<xpath expr="//div[@id='languages']" position="after">
					<h2>Auto Create Employee</h2>
					<div class="row mt16 o_settings_container" name="users_setting_container">
						<div class="col-12 col-lg-6 o_setting_box" id="auto_create_employee_setting">
							<div class="o_setting_left_pane">
								<field name="auto_create_employee"/>
							</div>
							<div class="o_setting_right_pane">
								<label for="auto_create_employee"/>
								<div class="text-muted">
									Enable auto creation of the employee on creating User.
								</div>
							</div>
						</div>
					</div>
				</xpath>
			</field>
   	</record>
</odoo>