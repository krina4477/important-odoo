<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cr_patient_lab_test_tree_view" model="ir.ui.view">
        <field name="name">patient.lab.test.tree.view</field>
        <field name="model">patient.lab.test</field>
        <field name="arch" type="xml">
            <tree string="Patient Lab Test">
                <field name="patient_id"/>
                <field name="select_test_id"/>
                <field name="lab_detail_id"/>
                <field name="test_price"/>

            </tree>
        </field>
    </record>

    <record id="cr_patient_lab_test_form_view" model="ir.ui.view">
        <field name="name">patient.lab.test.form.view</field>
        <field name="model">patient.lab.test</field>
        <field name="arch" type="xml">
            <form string="laboratory detail">
                <sheet>
                    <group>
                        <group>
                            <field name="lab_detail_id"/>
                            <field name="patient_id" domain="[('is_patient','=', True)]"
                                   context="{'form_view_ref':'cr_medical_base.cr_patient_form_view'}"/>
                            <field name="select_test_id"/>
                            <field name="test_price"/>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>

    <record id="action_cr_patient_lab_test" model="ir.actions.act_window">
        <field name="name">Patient Lab Test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.lab.test</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Test!
            </p>
        </field>
    </record>

    <menuitem id="menu_laboratory_patient_info"
              action="action_cr_patient_lab_test"
              parent="laboratory.menu_pathologist_details_1"
              active="True"
              sequence="42"
    />

</odoo>