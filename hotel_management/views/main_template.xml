<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="booking_template">
        <t t-call="website.layout">
            <div style="width:85%;justify-content : center;margin : 1% auto;">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                </t>
            </div>
            <div class="container" style="text-align: center;margin : 1% auto;">
                <div style="text-align: center;color: #003366;text-shadow: 2px 2px 4px #ffff80;">
                    <h2>
                        Hotel
                        Booking Details
                    </h2>
                </div>
                <table class="table table-condensed table-striped o_portal_my_quotes_table"
                       style="width:100%;text-align: center;border:2px solid black;">
                    <thead style="border-bottom:2px solid black;">
                        <tr style="background-color:#ccccff;">
                            <th>Number</th>
                            <th>Customer Name</th>
                            <th>Check In Date</th>
                            <th>Check Out Date</th>
                            <th>Room Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="hotel_history" t-as="booking">
                            <style>
                                tr:hover {
                                background-color: #ccccff;
                                }
                            </style>
                            <tr>
                                <td>
                                    <a t-attf-href="/booking/{{slug(booking)}}">
                                        <t t-esc="booking.number"/>
                                    </a>
                                </td>
                                <td>
                                    <t t-foreach="booking.customer_id" t-as="customer">
                                        <t t-esc="customer.display_name"/>
                                        <br/>
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="booking.check_in_date"/>
                                </td>
                                <td>
                                    <t t-esc="booking.check_out_date"/>
                                </td>
                                <td>
                                    <t t-foreach="booking.room_number_ids" t-as="room">
                                        <t t-esc="room.room_number"/>
                                        <br/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
