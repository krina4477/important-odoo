<odoo>
    <record id="website_doctor_template" model="ir.ui.view">
        <field name="name">Website doctor Demo</field>
        <field name="type">qweb</field>
        <field name="key">cr_medical_base.website_doctor_template</field>
        <field name="arch" type="xml">
            <t name="Doctor" t-name="cr_medical_base.website_doctor_template">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty"/>
                    <div id="wrap" class="oe_structure oe_empty"/>
                    <div id="wrap">
                        <t class="oe_structure">
                            <section class="s_text_image oe_img_bg oe_custom_bg"
                                     style="background-color: rgb(206, 222, 231)">
                                <div class="text-center">
                                    <h2>
                                        <b>
                                            <font style="color: rgb(66, 66, 66); font-size: 36px;">Doctors List
                                            </font>
                                        </b>
                                    </h2>
                                </div>
                            </section>

                            <t t-if="record_boolean">
                                <section class="pt32 pb32">
                                    <div class="container">
                                        <div class="row">
                                            <t t-foreach="doctor_data" t-as="data">
                                                <div class="col-md-4">
                                                    <a t-attf-href="/candidroot_medical/doctor-details-info/#{data.id}">
                                                        <span t-field="data.image_1920"
                                                              t-options="{'widget': 'image', 'resize': None if product_image_big else '200x200'}"/>
                                                    </a>
                                                    <a t-attf-href="/candidroot_medical/doctor-details-info/#{data.id}">
                                                        <h1>
                                                            <t t-esc="data.name"/>
                                                            <br></br>
                                                        </h1>
                                                    </a>
                                                    <h5>
                                                        <div class="col-md-12">
                                                            <b>Speciality:-</b>
                                                            <t t-foreach="data.speciality_ids" t-as="speciality">
                                                                <span t-field="speciality.speciality"/>
                                                            </t>
                                                            <br></br>
                                                            <b>Fees:-</b>
                                                            <t t-esc="data.doctor_fees"/>
                                                            <br></br>
                                                            <b>Location:-</b>
                                                            <t t-esc="data.work_location"/>
                                                            <br></br>
                                                            <b>Email:-</b>
                                                            <t t-esc="data.email"/>
                                                        </div>
                                                    </h5>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </section>
                            </t>
                            <t t-else="">
                                <div class="text-center">
                                    Empty
                                </div>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </field>
    </record>


    <record id="website_doctor_page" model="website.page">
        <field name="website_published">True</field>
        <field name="url">/doctor-info</field>
        <field name="view_id" ref="website_doctor_template"/>
    </record>
</odoo>




