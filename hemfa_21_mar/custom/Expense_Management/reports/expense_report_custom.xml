<odoo>
    <template id="report_expense_document_custom">
        <t t-call="web.html_container">
            <!-- Ensure docs is provided and contains records -->
            <t t-if="docs">
                <t t-foreach="docs" t-as="o">
                    <t t-set="company" t-value="o.company_id"/>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- Title Section -->
                            <div style="text-align:center; margin-bottom: 20px;">
                                <h2 style="font-size: 24px; font-weight: bold;">Expense Report</h2>
                            </div>

                            <!-- Basic Information Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Reference:</strong> <span t-esc="o.name"/>
                                </div>
                                <div class="col-6" style="text-align:right;">
                                    <strong>Date:</strong> <span t-esc="o.date"/>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Type:</strong> <span t-esc="o.type"/>
                                </div>
                                <div class="col-6" style="text-align:right;">
                                    <strong>Journal:</strong> <span t-esc="o.journal_id.name"/>
                                </div>
                            </div>

                            <!-- Check if exchange rate needs to be shown -->
                            <t t-if="o.journal_id.currency_id != o.company_id.currency_id">
                                <div class="row" style="margin-bottom: 20px;">
                                    <div class="col-12" style="text-align:left;">
                                        <strong>Exchange Rate:</strong> 
                                        <span t-esc="o.exchange_rate"/> 
                                        <span t-esc="o.company_currency_id.name"/> / 
                                        <span t-esc="o.journal_id.currency_id.name"/>
                                    </div>
                                </div>
                            </t>

                            <!-- Total Amount Section -->
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <strong>Total Amount:</strong> 
                                    <span t-esc="o.total_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </div>
                                <div class="col-6" style="text-align:right;">
                                    <strong>Created by:</strong> <span t-esc="o.create_uid.name"/>
                                </div>
                            </div>

                            <!-- Expense Lines Section -->
                            <h3 style="margin-bottom: 10px;">Expense Lines</h3>
                            <table class="table table-sm" style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
                                <thead style="border-bottom: 2px solid #000;">
                                    <tr>
                                        <th style="padding: 10px; text-align: center;">Account</th>
                                        <th style="padding: 10px; text-align: center;">Reference</th>
                                        <th style="padding: 10px; text-align: center;">Partner</th>
                                        <th style="padding: 10px; text-align: right;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.line_ids" t-as="line">
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.account_id.name"/>
                                        </td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.reference"/>
                                        </td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.partner_id.name"/>
                                        </td>
                                        <td style="padding: 10px; text-align:right; border-bottom: 1px solid #ddd;">
                                            <span t-esc="line.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
