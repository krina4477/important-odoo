<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="res_config_inherit_view_form" model="ir.ui.view">
			<field name="name">res.config.form.inherit</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="website.res_config_settings_view_form"/>
			<field name="arch" type="xml">

				<xpath expr="//div[@data-key='website']" position="inside">
					<h2>GOIP Setup</h2>
					<div class="row mt16 o_settings_container" id="notification">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<field name="goip_setup"/>
								<div class="text-muted">
									Allow or disallow GOIP setup.
								</div>
							</div>
						</div>
					</div>
				</xpath>

			</field>
		</record>

		<!-- Product Category -->
		<record model="ir.ui.view" id="view_sale_order_region_inherit">
			<field name="name">sale.order.inherited</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='pricelist_id']" position="after">
					<field name="region_country_id" />   <!-- region_country_id Field in sale.order -->
				</xpath>
			</field>
		</record>

		<!-- Website Region Pricelist -->
		<record id="website_region_form_view" model="ir.ui.view">
			<field name="name">website.region.form</field>
			<field name="model">website.region</field>
			<field name="arch" type="xml">
				<form string="Website Region">
					<sheet>
						<group>
							<group>
								<field name="name" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="website_region_tree_view" model="ir.ui.view">
			<field name="name">website.region.tree</field>
			<field name="model">website.region</field>
			<field name="arch" type="xml">
				<tree string="Website Region">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="website_region" model="ir.actions.act_window">
			<field name="name">Website Region</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">website.region</field>
			<field name="view_mode">tree,form</field>
		</record>

			<menuitem id="region"
			name="Region"
			parent = "sale.product_menu_catalog"
			sequence="11"/>
			
		<menuitem action="website_region" id="menu_website_region"
			parent="sale.product_menu_catalog" sequence="4" />

	    <!-- Res Country -->
		<record model="ir.ui.view" id="view_res_country_region_inherit">
			<field name="name">res.country.inherited</field>
			<field name="model">res.country</field>
			<field name="inherit_id" ref="base.view_country_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='code']" position="after">
					<field name="region_id" />
					<field name="company_id" />  
					<field name="pricelist_id" /> 
					<field name="lang" /> 
					
				</xpath>
			</field>
		</record>


		<record id="website_region_country_pricelist_tree_view" model="ir.ui.view">
			<field name="name">res.region.country.pricelist.tree</field>
			<field name="model">res.country</field>
			<field name="arch" type="xml">
				<tree string="Website Region Country">
					<field name="region_id"/>
				</tree>
			</field>
		</record>
		
				
		<record id="website_region_country_pricelist_inherit" model="ir.actions.act_window">
			<field name="name">Website Region Country</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.country</field>
			<field name="view_mode">tree,form</field>
		</record>
			
		<menuitem action="website_region_country_pricelist_inherit" id="menu_website_region_country_pricelist_inherit"
			parent="sale.product_menu_catalog" sequence="5" />



	</data>
</openerp>
