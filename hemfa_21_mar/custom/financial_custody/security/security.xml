    <record id="cash_request_rule_user" model="ir.rule">
        <field name="name">Cash Request User Rule</field>
        <field name="model_id" ref="model_financial_custody_request"/>
        <field name="groups" eval="[(4, ref('financial_custody.group_cash_request_user'))]"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

