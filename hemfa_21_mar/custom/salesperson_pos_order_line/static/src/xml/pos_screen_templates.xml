<?xml version="1.0" encoding="UTF-8"?>
<!--    Add a button sales persons in pos-->
<templates id="template" xml:space="preserve">
    <t t-name="SalesPersonButton" owl="1">
        <t t-if="env.pos.config.is_sales_person_visible">
        <div class="control-button o_product_list_button">
            <i class="fa fa-pencil-square" role="img" aria-label="Products"
               title="Products" />
            <t t-if="env.pos.selectedOrder.salesperson">
                <t t-esc="env.pos.selectedOrder.salesperson[1]"/>
            </t>
            <t t-else="">
                Salesperson
            </t>

        </div>
        </t>
    </t>
</templates>
