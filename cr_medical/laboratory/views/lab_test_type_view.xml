<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cr_laboratory_test_type_tree_view" model="ir.ui.view">
        <field name="name">cr.laboratory.test.type.tree.view</field>
        <field name="model">lab.test.type</field>
        <field name="arch" type="xml">
            <tree string="laboratory test type">
                <field name="test_name"/>
            </tree>
        </field>
    </record>


    <record id="cr_laboratory_test_type_form_view" model="ir.ui.view">
        <field name="name">cr.laboratory.test.type.form.view</field>
        <field name="model">lab.test.type</field>
        <field name="arch" type="xml">
            <form string="laboratory detail">
                <sheet>
                    <group>
                        <group>
                            <field name="test_name"/>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>


    <record id="action_cr_laboratory_test_type_information" model="ir.actions.act_window">
        <field name="name">Laboratory Test Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lab.test.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Test!
            </p>
        </field>
    </record>


    <menuitem id="menu_laboratory_test_type_info"
              action="action_cr_laboratory_test_type_information"
              parent="laboratory.menu_pathologist_details_1"
              active="True"
              sequence="40"/>
</odoo>
