<odoo>
    <!--     Form view   -->
    <record id="ipd_reports_view" model="ir.ui.view">
        <field name="name">ipd.reports</field>
        <field name="model">ipd.reports</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="select_report"/>
                            <field name="department_ids" widget="many2many_tags"
                                   attrs="{'invisible':[('select_report','!=','group_by_department_ipd')]}"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="select_years"
                                   attrs="{'invisible':[('select_report','!=','group_by_month_ipd')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="button_export_pdf" string="Export PDF" type="object"/>
                        <button string="CANCEL" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ipd_repors_action" model="ir.actions.act_window">
        <field name="name">IPD Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ipd.reports</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="ipd_reports_view"/>
        <field name="target">new</field>
    </record>
</odoo>
