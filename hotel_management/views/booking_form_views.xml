<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="booking_form_view_tree" model="ir.ui.view">
        <field name="name">booking.form.tree</field>
        <field name="model">booking.form</field>
        <field name="arch" type="xml">
            <tree string="booking_form">
                <field name="customer_id"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
                <field name="type_ids" widget="many2many_tags"/>
                <field name="room_number_ids" widget="many2many_tags"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-success="state == 'confirm'"
                       decoration-danger="state == 'cancelled'" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="booking_form_view_form" model="ir.ui.view">
        <field name="name">booking_form</field>
        <field name="model">booking.form</field>
        <field name="arch" type="xml">
            <form string="booking form">
                <header>
                    <button name="draft" attrs="{'invisible': [('state', '=', 'draft')]}" string="Draft"
                            type="object"/>
                    <button name="confirm" attrs="{'invisible': [('state', '=', 'confirm')]}" string="Confirm"
                            type="object"/>
                    <button name="cancel" attrs="{'invisible': [('state', '=', 'cancel')]}" string="Cancel"
                            type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class=" oe_stat_button" name="action_preview_hotel"
                                type="object" icon="fa-globe" string="Customer Preview">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="booking_reference"/>
                            <field name="check_in_date"/>
                            <field name="check_out_date"/>
                            <field name="type_ids" widget="many2many_tags"/>
                            <field name="room_number_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="customer_id"/>
                            <field name="city"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="room_facility"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="booking_form_view_kanban" model="ir.ui.view">
        <field name="name">booking.form.kanban</field>
        <field name="model">booking.form</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="customer_id"/>
                <field name="room_number_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div>
                                <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="customer_id"/>
                                        <field name="room_number_ids"/>
                                        <field name="type_ids"/>
                                        <field name="check_in_date"/>
                                        <br/>
                                        <field name="check_out_date"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="booking_form_view_graph" model="ir.ui.view">
        <field name="name">booking.form.graph</field>
        <field name="model">booking.form</field>
        <field name="arch" type="xml">
            <graph string="booking form" sample="1">
                <field name="type_ids"/>
                <field name="room_facility"/>
            </graph>
        </field>
    </record>

    <record id="booking_form_view_pivot" model="ir.ui.view">
        <field name="name">booking.form.pivot</field>
        <field name="model">booking.form</field>
        <field name="priority">60</field>
        <field name="arch" type="xml">
            <pivot string="booking form" sample="1">
                <field name="customer_id" type="row"/>
                <field name="check_in_date" type="col"/>
                <field name="check_out_date" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="booking_form_view_calendar" model="ir.ui.view">
        <field name="name">booking.form.calendar</field>
        <field name="model">booking.form</field>
        <field name="arch" type="xml">
            <calendar string="booking form" date_start="check_in_date">
                <field name="customer_id"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
            </calendar>
        </field>
    </record>

    <record id="booking_form_action" model="ir.actions.act_window">
        <field name="name">Booking Form</field>
        <field name="res_model">booking.form</field>
        <field name="view_mode">tree,form,kanban,graph,pivot,calendar</field>
    </record>

    <menuitem
            id="hotel_management_main"
            name="Hotel Management"/>

    <menuitem
            id="booking_form_root"
            name="Booking Form"
            parent="hotel_management_main"
            action="booking_form_action"
            sequence="1"/>

</odoo>
