<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="user_company_rule" model="ir.rule">
			<field name="name">Account Cheque</field>
			<field name="model_id" ref="model_account_cheque"/>
			<field name="global" eval="True"/>
			<field name="domain_force">[('company_id' ,'=', user.company_id.id)]</field>
		</record>



         <record id="cheque_branch_manager_rule" model="ir.rule">
            <field name="name">Cheque Branch Manager</field>
            <field name="model_id" ref="model_account_cheque"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('branch.group_branch_user_manager'))]"/>
        </record>

        <record id="cheque_branch_rule" model="ir.rule">
            <field name="name">Cheque Branch</field>
            <field name="model_id" ref="model_account_cheque"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('branch_id','=',False),('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('branch.group_branch_user')),(4, ref('branch.group_multi_branch_user'))]"/>
        </record>

    
	</data>
	<data noupdate="1">
        <record id="group_cheque_cash_no_accouting_effect" model="res.groups">
            <field name="name">Cheque/Cash Payment No Accounting Effect</field>
        </record>
    </data>
</openerp>

