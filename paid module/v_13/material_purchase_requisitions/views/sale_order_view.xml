<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_send_report" model="ir.ui.view">
            <field name="name">sale.order.in.form.work</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="before">
                    <field name="appear_in_sale_requisition" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="before">
                    <button name="action_quotation_send_order_sale" type="object" string=" Send Sale Order (Sabic)" attrs="{'invisible': [('appear_in_sale_requisition', '!=', True)]}"/>
                    <button name="recalculate_handling_fees" type="object" string="Recalculate Handling fees" attrs="{'invisible': ['|',('appear_in_sale_requisition', '!=', True), ('state', '=', 'done')]}"/>
                </xpath>
                <xpath expr="//tree/field[@name='product_uom_qty']" position="before">
                    <field name="sale_requisition_line_id" invisible="1"/>
                </xpath>

                <xpath expr="//tree/field[@name='product_uom_qty']"  position="attributes">
                    <attribute name="attrs">{'readonly': [('sale_requisition_line_id', '!=', False)]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
