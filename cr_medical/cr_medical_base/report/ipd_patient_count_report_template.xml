<odoo>
    <template id="patient_count_report_department">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h1>
                            <u>
                                <em>Patient Admission and Discharge Report</em>
                            </u>
                        </h1>
                    </div>
                    <div>
                        <table class="table .table-striped .table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Date From :
                                        <t t-esc="start_date"/>
                                    </td>
                                    <td>Date To :
                                        <t t-esc="end_date"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <th rowspan="2" name="department" class="text-left">Department</th>
                                    <th colspan="2" name="department" class="text-center">Admission Count
                                    </th>
                                    <th colspan="2" name="total_tablet" class="text-center">Discharge Count</th>
                                    <th rowspan="2" name="total_tablet" class="text-center">Total</th>
                                </tr>
                                <tr>
                                    <td class="text-center">
                                        Male
                                    </td>
                                    <td class="text-center">Female</td>
                                    <td class="text-center">
                                        Male
                                    </td>
                                    <td class="text-center">Female</td>
                                </tr>
                            </thead>
                            <tbody>
                                <div class="opd_report">
                                    <t t-foreach="search_record" t-as="line">
                                        <tr>
                                            <td name="department" class="text-left" style="font-size:14px;">
                                                <span t-esc="line"/>
                                            </td>
                                            <td name="department" class="text-right" style="font-size:14px;">
                                                <span t-esc="search_record[line].get('male')"/>
                                            </td>

                                            <td name="total_tablet" class="text-right" style="font-size:14px;">
                                                <span t-esc="search_record[line].get('female')"/>
                                            </td>
                                            <td name="total_tablet" class="text-right" style="font-size:14px;">
                                                <span t-esc="search_record[line].get('dis_male')"/>
                                            </td>
                                            <td name="total_tablet" class="text-right" style="font-size:14px;">
                                                <span t-esc="search_record[line].get('dis_female')"/>
                                            </td>
                                            <td name="total_tablet" class="text-right" style="font-size:14px;">
                                                <t t-set="total_admit_patient"
                                                   t-value="search_record[line].get('male') +search_record[line].get('female')"/>
                                                <t t-set="total_discharge_patient"
                                                   t-value="search_record[line].get('dis_male') +search_record[line].get('dis_female')"/>
                                                <span t-esc="total_admit_patient - total_discharge_patient"/>
                                            </td>
                                        </tr>
                                    </t>
                                </div>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>