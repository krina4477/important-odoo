<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<record id="mass_update_task_wiz_form_view" model="ir.ui.view">
			<field name="name">mass.update.task.wiz.form.view</field>
			<field name="model">mass.update.task.wiz</field>
			<field name="arch" type="xml">
				<form string="Mass update Task">
					<group>
					   <group>
						<field name="change_project"/>
						<field name="project_id" attrs="{'invisible': [('change_project', '!=', True)]}"/>
					   </group>
						
						<group>
						<field name="change_deadline"/>
						<field name="new_date_deadline" attrs="{'invisible': [('change_deadline', '!=', True)]}"/>
						</group>
						
						<group>
						<field name="change_stage"/>
						<field name="new_stage" attrs="{'invisible': [('change_stage', '!=', True)]}"/>
						</group>
						
						<group>
						<field name="change_tag"/>
						<field name="update_tag_via" attrs="{'invisible': [('change_tag', '!=', True)],'required':[('change_tag', '=', True)]}"/>
						<field name="tags" widget="many2many_tags"  attrs="{'invisible': [('change_tag', '!=', True)],'required':[('change_tag', '=', True)]}"/>
						</group>
						
						<group>
						<field name="change_assignees"/>
						<field name="update_assignees_via" attrs="{'invisible': [('change_assignees', '!=', True)],'required':[('change_assignees', '=', True)]}"/>
                        <field name="assignees_ids" widget="many2many_tags"  attrs="{'invisible': [('change_assignees', '!=', True)],'required':[('change_assignees', '=', True)]}"/>
						</group>
						
					</group>
				    <footer>
						<button name="update_values" string="Update" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>  

		<record id="action_mass_update_task" model="ir.actions.act_window">
			<field name="name">Mass Update Task</field>
			<field name="res_model">mass.update.task.wiz</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="binding_model_id" ref="project.model_project_task"/>
            <field name="binding_view_types">list</field>
		</record>

