<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="auto_send_mail" model="ir.cron">
        <field name="name">Auto Send Email And Message</field>
        <field name="model_id" ref="model_opd_opd"/>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">model.send_email_message()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="auto_stock_message" model="ir.cron">
        <field name="name">Auto Stock Message</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">model.cron_expiry_note()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

</odoo>