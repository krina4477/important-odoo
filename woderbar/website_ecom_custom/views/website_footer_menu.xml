<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="website_footer_menu_tree_view" model="ir.ui.view">
        <field name="name">website.footer.menu.tree.view</field>
        <field name="model">website.footer.menu</field>
        <field name="arch" type="xml">
            <tree string="Website Footer menu">
                <field name="name"/>
                <field name="url"/>
                <field name="website_id"/>
            </tree>
        </field>
    </record>

    <record id="website_footer_menu_form_view" model="ir.ui.view">
        <field name="name">website.footer.menu.form.view</field>
        <field name="model">website.footer.menu</field>
        <field name="arch" type="xml">
            <form string="Website Footer menu">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="website_id"/>
                        </group>
                        <group>
                            <field name="url"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_website_footer_menu" model="ir.actions.act_window">
        <field name="name">Website Footer Menu</field>
        <field name="res_model">website.footer.menu</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Website Footer Menus"
            id="wesite_footer_menu_config"
            action="action_website_footer_menu"
            parent="website.menu_website_global_configuration"
            sequence="46"
            groups="base.group_no_one"/>

</odoo>
