<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_remove_cr" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="button_remove" string="Delete" type="object" groups="delete_post_move_cr.group_remove_post_entry" invisible = "state != 'posted'"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_remove_cr" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status_in_payment']" position="after">
                <field name="move_type" invisible="True"/>
                <button name="button_remove_tree" string="Delete Entry" type="object" groups="delete_post_move_cr.group_remove_post_entry_tree" invisible = "move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>

</odoo>