<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_sequence_per_fiscalyear" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sequence.per.fiscal.year</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account_accountant.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='fiscalyear']/div[hasclass('content-group')]" position="replace">

                <div class="col-12 col-lg-12 o_setting_box" invisible = "group_fiscal_year == False">

                    <div class="o_setting_left_pane">
                        <field name="seq_per_fiscalyear"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="seq_per_fiscalyear"/>
                        <div class="text-muted">
                            Enable for generating sequence based on defined fiscal year.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
