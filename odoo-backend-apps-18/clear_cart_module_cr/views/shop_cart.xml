<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="inherit_cart" inherit_id="website_sale.navigation_buttons">
        <xpath expr="//a[@name = 'website_sale_main_button']" position="after">
            <a href="/shop/clear_cart" role="button" t-if="website_sale_order and website_sale_order.website_order_line" class="btn btn-primary mt-3" id="clear_cart_button">
                <i class="fa fa-refresh" style="color:white;"/>
                <span style="color:white;">Clear Cart</span>
            </a>
        </xpath>
    </template>

</odoo>