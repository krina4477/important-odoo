<odoo>
    <!-- Extend Stock Valuation Layer Tree View -->
    <record id="view_stock_valuation_layer_tree_pos_enhancement" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.pos.enhancement</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="pos_config_id"/>
                <field name="pos_session_id"/>
            </xpath>
        </field>
    </record>
</odoo>
