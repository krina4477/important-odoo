<odoo>
    <!-- Stock Move Form View -->
    <record id="view_move_form_pos_enhancement" model="ir.ui.view">
        <field name="name">stock.move.form.pos.enhancement</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="pos_config_id" readonly="1"/>
                    <field name="pos_session_id" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Stock Move Tree View -->
    <record id="view_move_tree_pos_enhancement" model="ir.ui.view">
        <field name="name">stock.move.tree.pos.enhancement</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="pos_config_id"/>
                <field name="pos_session_id"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Move Line Tree View -->
    <record id="view_move_line_tree_pos_enhancement" model="ir.ui.view">
        <field name="name">stock.move.line.tree.pos.enhancement</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="pos_config_id"/>
                <field name="pos_session_id"/>
            </xpath>
        </field>
    </record>

</odoo>
