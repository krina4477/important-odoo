<odoo>
    <template id="medicine_report_department">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h1>
                            <u>
                                <em>Medicine Report Department Wise</em>
                            </u>
                        </h1>
                    </div>
                    <div>
                        <table class="table .table-striped .table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Date From :
                                        <t t-esc="start_date"/>
                                    </td>
                                    <td>Date To :
                                        <t t-esc="end_date"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <th name="sequence" class="text-center">Sr.No</th>
                                    <th name="Patient" class="text-left">Madicine Name</th>
                                    <th name="department" class="text-left">Department</th>
                                    <th name="total_tablet" class="text-center">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <div class="opd_report">
                                    <t t-set="index" t-value="0"/>
                                    <t t-foreach="search_record" t-as="line">
                                        <tr>
                                            <t t-set="index" t-value="index+1"/>
                                            <td class="text-center" name="count" style="font-size:14px;">
                                                <span t-esc="index"/>
                                            </td>

                                            <td name="medicine" class="text-left" style="font-size:14px;">
                                                <span t-esc="line.get('medicine_id')"/>
                                            </td>

                                            <td name="department" class="text-left" style="font-size:14px;">
                                                <span t-esc="line.get('department')"/>
                                            </td>

                                            <td name="total_tablet" class="text-center" style="font-size:14px;">
                                                <span t-esc="line.get('total_tablets')"/>
                                            </td>
                                        </tr>

                                    </t>

                                </div>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>