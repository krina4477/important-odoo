<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_requisition_form_view" model="ir.ui.view">
            <field name="name">sale.requisition.form.view</field>
            <field name="model">sale.requisition</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button class="btn-primary" invisible="state not in ['draft']" name="draft_to_first_approve" string="Confirm" type="object"/>
                        <button class="btn-primary" groups="material_purchase_requisitions.group_purchase_requisition_department" invisible="state not in ['first_approve']" name="first_approve_to_second_approve" string="Approve" type="object"/>
                        <button class="btn-primary" groups="material_purchase_requisitions.group_purchase_requisition_department" invisible="state not in ['second_approve']" name="approve_and_create_sale_order" string="Approve &amp; Create SO" type="object"/>
                        <button groups="base.group_user" invisible="state not in ['draft']" name="action_cancel" string="Cancel" type="object"/>
                        <field name="state" statusbar_visible="draft,first_approve,second_approve,done" string="confirm" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" groups="material_purchase_requisitions.group_purchase_requisition_department" name="button_box">
                            <button class="oe_stat_button" icon="fa-file" invisible="quotation_count == 0" name="action_view_quotation_created" type="object">
                                <field name="quotation_count" string="Quotation" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                    <br/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_open': True, 'no_create_edit': True}" readonly="state != 'draft'" required="1"/>
                                <field invisible="1" name="analytic_account_ids"/>
                                <field domain="[('project_id','=',project_id)]" name="task_id" options="{'no_open': True, 'no_create_edit': True}" readonly="state != 'draft'" required="1"/>
                                <field name="partner_id" options="{'no_open': True, 'no_create_edit': True}" readonly="state == 'done'"/>
                            </group>
                            <group>
                                <field domain="[('id', 'in', analytic_account_ids)]" name="analytic_account_id" options="{'no_open': True, 'no_create_edit': True}" readonly="state != 'draft'"/>
                                <field name="request_date" readonly="1" string="Requisition Date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sale requisition lines">
                                <field name="requisition_line_ids" readonly="state == 'done'" required="1">
                                    <tree>
                                        <field invisible="1" name="is_section"/>
                                        <field invisible="is_section == False" name="name" required="is_section == True"/>
                                        <field invisible="is_section == True" name="product_id" options="{'no_open': True, 'no_create_edit': True}" required="is_section == False"/>
                                        <field invisible="is_section == True" name="quantity" required="is_section == False"/>
                                        <field invisible="is_section == True" name="remarks" required="is_section == False"/>
                                        <field invisible="is_section == True" name="sabic_quantity" required="is_section == False"/>
                                        <field invisible="is_section == True" name="employee_quantity" required="is_section == False"/>
                                    </tree>
                                    <form string="Sale requisition">
                                        <group>
                                            <group>
                                                <field name="is_section"/>
                                                <field invisible="is_section == False" name="name" required="is_section == True"/>
                                                <field invisible="is_section == True" name="product_id" options="{'no_open': True, 'no_create_edit': True}" required="is_section == False"/>
                                                <field invisible="is_section == True" name="quantity" string="Total Qty"/>
                                            </group>
                                            <group>
                                                <field invisible="is_section == True" name="remarks"/>
                                                <field invisible="is_section == True" name="sabic_quantity"/>
                                                <field invisible="is_section == True" name="employee_quantity"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Extra info">
                                <group>
                                    <group readonly="state == 'done'">
                                        <field name="address"/>
                                        <field name="sap_location"/>
                                        <field name="occupant_name"/>
                                        <field name="id_number"/>
                                        <field name="check_out_date"/>
                                    </group>
                                    <group readonly="state == 'done'">
                                        <field name="status"/>
                                        <field name="unit_type"/>
                                        <field name="unit_category"/>
                                        <field name="flat_rate"/>
                                        <field name="reference_no"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group readonly="state == 'done'">
                                    <field name="create_date" readonly="1"/>
                                    <field name="sla_state" readonly="1"/>
                                    <field name="number_of_hours" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="sale_requisition_tree_view" model="ir.ui.view">
            <field name="name">sale.requisition.view.tree</field>
            <field name="model">sale.requisition</field>
            <field name="arch" type="xml">
                <tree decoration-success="state=='done'"  decoration-info="sla_state == 'day_three' and state not in ['done', 'cancel','reject']" decoration-warning="sla_state == 'day_four' and state not in ['done', 'cancel','reject']" decoration-danger="sla_state == 'more_then_four_days' and state not in ['done', 'cancel','reject']">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="project_id"/>
                    <field name="request_date"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <field invisible="1" name="sla_state"/>
                </tree>
            </field>
        </record>
        <record id="action_sale_requisition" model="ir.actions.act_window">
            <field name="name">Sale requisitions</field>
            <field name="res_model">sale.requisition</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_sale_requisition" id="menu_action_sale_requisition" name="Sale requisitions" parent="menu_item_purchase_requisition"/>
    </data>
</odoo>
